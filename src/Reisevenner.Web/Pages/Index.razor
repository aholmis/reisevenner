@page "/"
@using Reisevenner.Web.Data

@inject NavigationManager Navigation

<h1>@Constants.AppName</h1>

<p>Lag en event her for bursdager, idrettsarrangementer og andre turer, sånn at man kan planlegge hvem som reiser sammen.</p>
<p>Sammen gjør vi en innsats for miljøet</p>

<button @onclick="CreateNewEvent">Lag en ny event</button>

<br />
<br />
<input type="text" placeholder="kode" @bind="eventcode" />
<br />
<button @onclick="JoinExistingEvent">Åpne en event med kode</button>

@code {
    string eventcode;
    string eventPath => "event/" + eventcode;

    void CreateNewEvent()
    {
        // Navigate to the page for creating a new event
        Navigation.NavigateTo("/create-event");
    }

    void JoinExistingEvent()
    {
        // Navigate to the page for joining an existing event
        Navigation.NavigateTo(eventPath, true);
    }

}
